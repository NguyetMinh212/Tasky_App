<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screen.AddDailyTaskFragment"
    android:padding="16dp">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:maxLines="1"
        android:background="@drawable/edt_txt_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:textColorHint="@color/white"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/subtitle_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subtitle"
        android:maxLines="1"
        android:background="@drawable/edt_txt_shape"
        app:layout_constraintTop_toBottomOf="@id/priority_task"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:textColorHint="@color/white"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/note_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notes"
        android:background="@drawable/edt_txt_shape"
        app:layout_constraintTop_toBottomOf="@id/subtitle_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:textColorHint="@color/white"
        android:padding="10dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="96dp"
        android:src="@drawable/baseline_check_24"
        android:visibility="visible"
        android:clickable="true"/>
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        app:layout_constraintTop_toBottomOf="@id/title_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/priority_task"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Priority Task"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/category"
        app:layout_constraintStart_toStartOf="@+id/subtitle_txt"/>

    <Button
        android:id="@+id/daily_task"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Daily Task"
        app:layout_constraintStart_toEndOf="@+id/priority_task"
        app:layout_constraintTop_toTopOf="@id/priority_task"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>